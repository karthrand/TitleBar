<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 沉浸ActionBar第五步：设置沉浸效果 -->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
	</style>
    <style name="ImmersionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- 设置通知栏颜色 -->
        <item name="android:statusBarColor">#99CCFF</item>
    </style>
    
    <!-- toolbar使用的主题-->
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--此处设置主题颜色，其中：
            colorPrimary为标题栏颜色
            colorPrimaryDark为标题栏上面部分颜色，即沉浸式部分
        -->
        <item name="colorPrimary">#99CCFF</item>
        <item name="colorPrimaryDark">#99CCFF</item>
    </style>
    
</resources>
